@require "./mixins"

body
	color whiteOff
	background-color blueDark
	font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif
	margin 0
	padding 0
	user-select none
	-moz-osx-font-smoothing grayscale
	-webkit-font-smoothing antialiased

a
	color whiteOff
	text-decoration none
	
	&:visited
		color whiteOff
		text-decoration none
	
	&:hover
		color whiteOff
		text-decoration underline
	
	&.button
		background-color greyTransparent
		border 1px solid orange
		border-radius 10px
		padding 5px 20px 7px
		
		&:active
			transform: scale(0.95)

h1,h2,h3,h4,h5,h6
	margin 0
	padding 0

hr
	border-color orange
	margin 25px 0
	width 100%

#main
	flex(column)
	align-items center
	overflow-x hidden
	
	& footer
		flex(row)
		background-color greyTransparent
		font-size footerSize
		line-height 20px
		min-height 20px
		justify-content center
		margin-top 50px
		width 100%
		z-index 1000

@require "./body"
@require "./cv"
@require "./head"
@require "./projects"
@require "./media"
