#main .cv
	
	& .portfolio
		
		& h1
			margin-bottom 1em
		
		& .project
			margin-bottom 1em
			
			& > div
				flex(row)
				justify-content space-between
				
				& h3, & h4 > a
					line-height 40px
				
				& h3
					text-align left
				
				& h4
					font-weight normal
					text-align right
			
			& p
				margin-top .5em
				text-align justify
