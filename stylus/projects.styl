#main #projectListContainer
	flex(row)
	align-items center
	background-color orange
	justify-content center
	margin-top 250px
	min-height 400px
	overflow visible
	padding 15px 0 20px
	position relative
	width 100%
	
	& .project
		flex(column)
		align-items center
		background-color blueLight
		border-radius 25px
		box-shadow 5px 10px greyTransparent
		justify-content center
		height 400px
		left 13%
		min-width 74%
		max-width 74%
		overflow hidden
		position absolute
		transition left 1s ease, box-shadow 1s ease, transform 0.2s ease
		
		&:hover
			transform: scale(1.01)
			text-decoration none
		
		&.show
			z-index 100
			
			&.previous
				left -62%
				z-index 10
				box-shadow -10px 8px greyTransparent
				
				&.offscreen
					left -137%
					z-index 10
					box-shadow -25px 5px greyTransparent
			
			&.next
				left 88%
				z-index 1000
				box-shadow 15px 12px greyTransparent
			
				&.offscreen
					left 176%
					z-index 1000
					box-shadow 25px 15px greyTransparent
		
		&:not(.show)
			hide()
			left 182%
			z-index 0
		
		& h1
			background-color greyTransparentLess
			border-radius 10px
			font-size headerSize
			padding 3px 10px 7px
			position absolute
			top 10%
			z-index 1000
		
		& p
			background-color greyTransparentLess
			border-radius 10px
			bottom 5%
			font-size socialLinkSize
			max-width 60%
			padding 3px 10px 7px
			position absolute
			right 5%
			text-align justify
			z-index 1000
		
		&.noBackground
			background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, daylight 100%)
			
			&.current
				animation-name bgGradientTransition1
				animation-timing-function linear
				animation-iteration-count 1
				animation-duration 1s
			
			&.previous
				background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, night 100%)
				animation-name bgGradientTransition2
				animation-timing-function linear
				animation-iteration-count 1
				animation-duration 1s
			
			&.next
				background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, morning 100%)
		
		& .rain
			background-color: transparent;
			height 500px
			width 100%
			
			& svg
				animation-delay calc(var(--delay) * 1s)
				animation-duration calc(var(--duration) * 1s)
				animation-iteration-count infinite
				animation-name rainDrop
				animation-timing-function linear
				height 30px
				left calc(var(--x) * 1%)
				position absolute
				top calc(var(--y) * -1px)
				
				& path
					fill #A1C6CC
					opacity var(--opacity)
					transform scaleY(calc(var(--scale) * 1.5))

@keyframes rainDrop
	90%
		opacity 1
	100%
		opacity 0
		transform translateY(400px)

@keyframes bgGradientTransition1
	0%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, morning 100%)
	10%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #FE5440 100%)
	20%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #FD6450 100%)
	30%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #FC7460 100%)
	40%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #FB8470 100%)
	50%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #FA9480 100%)
	60%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #F9A490 100%)
	70%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #F8B4A0 100%)
	80%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #F7C4B0 100%)
	90%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, daylight 100%)

@keyframes bgGradientTransition2
	0%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, daylight 100%)
	10%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #D6BDB4 100%)
	20%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #C6ADBD 100%)
	30%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #B69DC4 100%)
	40%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #A67DCD 100%)
	50%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #865DD4 100%)
	60%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #764DDD 100%)
	70%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #662DE4 100%)
	80%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, #561DED 100%)
	90%
		background linear-gradient(0deg, blueLight 0%, blueLightTransition 25%, night 100%)
