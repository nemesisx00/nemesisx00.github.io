#main #projectListContainer
	flex(row)
	align-items center
	background-color orange
	justify-content center
	margin-top 250px
	min-height 400px
	overflow visible
	padding 15px 0 20px
	position relative
	width 100%
	
	& .project
		flex(column)
		align-items center
		background-color blueLight
		border-radius 25px
		box-shadow 5px 10px greyTransparent
		justify-content center
		height 400px
		left 13%
		min-width 74%
		max-width 74%
		overflow hidden
		position absolute
		transition left 1s ease, box-shadow 1s ease, transform 0.2s ease
		
		&:hover
			transform: scale(1.01)
			text-decoration none
		
		&.show
			z-index 100
			
			&.previous
				left -62%
				z-index 10
				box-shadow -10px 8px greyTransparent
				
				&.offscreen
					left -137%
					z-index 10
					box-shadow -25px 5px greyTransparent
			
			&.next
				left 88%
				z-index 1000
				box-shadow 15px 12px greyTransparent
			
				&.offscreen
					left 176%
					z-index 1000
					box-shadow 25px 15px greyTransparent
		
		&:not(.show)
			hide()
			left 182%
			z-index 0
		
		& h1
			background-color greyTransparentLess
			border-radius 10px
			font-size headerSize
			padding 3px 10px 7px
			position absolute
			top 10%
			z-index 1000
		
		& p
			background-color greyTransparentLess
			border-radius 10px
			bottom 5%
			font-size socialLinkSize
			max-width 60%
			padding 3px 10px 7px
			position absolute
			right 5%
			text-align justify
			z-index 1000
		
		& .rain
			height 500px
			width 100%
			
			& svg
				animation-delay calc(var(--delay) * 1s)
				animation-duration calc(var(--duration) * 1s)
				animation-iteration-count infinite
				animation-name rainDrop
				animation-timing-function linear
				height 30px
				left calc(var(--x) * 1%)
				position absolute
				top calc(var(--y) * -1px)
				
				& path
					fill #A1C6CC
					opacity var(--opacity)
					transform scaleY(calc(var(--scale) * 1.5))

@keyframes rainDrop
	90%
		opacity 1
	100%
		opacity 0
		transform translateY(400px)
